<div class="container">

  <div class="row">

    <div class="col-md-12">

      <h1 class="text-center">Eat-Da-Burger!</h1>

    </div>

  </div>

  <hr>

  <div class="row" id="non-devoured-burgers">

    <div class="col-md-4">

      <h2>Burgers that are not yet devoured!</h2>


      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>

  </div>

  <div class="row" id="devoured-burgers">

    <div class="col-md-4">

      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>

  <div class="row" id="add-burger">

    <div class="col-md-4">

      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>

        <button type="submit" class="btn btn-success">Add Burger</button>
      </form>

    </div>
  </div>

</div>